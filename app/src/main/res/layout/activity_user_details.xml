<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="com.example.shraaboni.superdonor.Activity.activity.UserDetails">
    <android.support.v7.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="12dp"
        android:id="@+id/view2"
        app:cardCornerRadius="40dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">
        <ImageView
            android:layout_height="100dp"
            android:layout_width="80dp"
            android:id="@+id/imageView1"
            android:background="#003060"
            android:src="@drawable/super_donor">
        </ImageView>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Verification Page"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/name"
        android:padding="10sp"
        android:background="@drawable/round_button"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:hint="Name" />
    <EditText
        android:id="@+id/phoneno"
        android:padding="10sp"
        android:background="@drawable/round_button"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:hint="Contact No" />

    <EditText
        android:id="@+id/specificarea"
        android:padding="10sp"
        android:background="@drawable/round_button"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:hint="Donation area" />

    <EditText
        android:id="@+id/donationdate"
        android:padding="10sp"
        android:background="@drawable/round_button"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:hint="Last donation date" />

    <EditText
        android:id="@+id/gender"
        android:padding="10sp"
        android:background="@drawable/round_button"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:hint="gender" />
    <Button
        android:id="@+id/button"
        android:onClick="goToHome"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Proceed to next page"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:background="@drawable/buttons"
        android:padding="20dp"/>
</LinearLayout>
</ScrollView>